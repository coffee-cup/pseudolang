const binary_search = (arr, target) => {
    let left = 0
    right = length arr - 1

    while left <= right {
        mid = (+ left right) / 2

        | arr[mid] == target = mid
        | arr[mid] < target: left = mid + 1
        | otherwise {
            right = mid - 1
        }
    }

    return -1
}

nums = [x | x <- [1, 3, 5, 7, 9, 11, 13, 15]]
result = binary_search nums 7

(print "Found at index:" result)
